<div id="carousel_wrap">
	<div class="container-fluid">
	<div id="myCarousel" class="carousel slide">
		<ol class="carousel-indicators">
			<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
			<li data-target="#myCarousel" data-slide-to="1"></li>
			<li data-target="#myCarousel" data-slide-to="2"></li>
		</ol>
		<!-- Carousel items -->
		<div class="carousel-inner">
			<div class="active item">
				<%= image_tag "rails-logo-512px.png" %>
				<h3>Ruby on Rails for Beginners</h3>
			</div>
			<div class="item">
				<h3>Helping you build cool things</h3>
			</div>
			<div class="item">
				<h3>Hosting meetups, classes, etc.</h3>
			</div>
		</div>
		<!-- Carousel nav -->
		<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
		<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
	</div>
</div>
</div>
<div id="home-wrap">

	<div class="container-fluid">
		<div class="row-fluid">
			<%= raw @page.content_for(:homepage) %>
		</div>
		<!-- yes, I realize there is a query in my view and I'm evil, but I'm just playin around. 
			I'll refactor this to the controller, promise. -->
		<% @page.parts.where("title like ?", "section%").each do |section| %>
			<div class="row-fluid">
				<%= raw @page.content_for(section.title.to_sym) %>
			</div>
		<% end %> 
	</div>
</div>
